<div
  class="block rounded-lg bg-white shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] light:bg-neutral-700">
  <div
    class="relative overflow-hidden bg-cover bg-no-repeat"
    data-te-ripple-init
    data-te-ripple-color="light">
    <% if @image_url.present? %>
      <img
        class="rounded-t-lg"
        src="<%= @image_url %>"
        alt="" />
        <a href="#!">
          <div class="absolute bottom-0 left-0 right-0 top-0 h-full w-full overflow-hidden bg-[hsla(0,0%,98%,0.15)] bg-fixed opacity-0 transition duration-300 ease-in-out hover:opacity-100">
          </div>
        </a>
    <% end %>


  </div>
  <div class="p-6">
    <h5
      class="mb-2 text-xl font-medium leading-tight text-neutral-800 light:text-neutral-50">
      <%= header %>
    </h5>
    <p class="mb-4 text-base text-neutral-600 light:text-neutral-200">
      <%= body %>
    </p>

    <div class="grid gap-1 auto-cols-max grid-cols-3 ">
      <% buttons.each do |button| %>
        <%= button %>
      <% end %>
    </div>
  </div>
</div>